-- Create ScreenGui
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")

-- Add to player GUI
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Main Frame
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(150, 0, 0) -- red theme
MainFrame.BorderSizePixel = 0
MainFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
MainFrame.Size = UDim2.new(0, 200, 0, 250)
MainFrame.Active = true
MainFrame.Draggable = true
MainFrame.ClipsDescendants = true
MainFrame.BackgroundTransparency = 0.1
MainFrame.Name = "NACHI_Frame"
MainFrame.AnchorPoint = Vector2.new(0.5,0.5)

-- Function to create buttons
local function createButton(name, text, pos)
    local btn = Instance.new("TextButton")
    btn.Parent = MainFrame
    btn.Name = name
    btn.Text = text
    btn.Size = UDim2.new(0, 180, 0, 35)
    btn.Position = UDim2.new(0, 10, 0, pos)
    btn.BackgroundColor3 = Color3.fromRGB(200, 0, 0) -- red buttons
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 20
    btn.AutoButtonColor = true
    return btn
end

-- Buttons
createButton("PetBtn", "Pet", 10)
createButton("PlantBtn", "Plant", 50)
createButton("TextBoxBtn", "TextBox", 90)
createButton("PlayersBtn", "Players", 130)
createButton("StealBtn", "Steal", 170)

-- Bottom Label (NACHI)
local Label = Instance.new("TextLabel")
Label.Parent = MainFrame
Label.Text = "NACHI"
Label.Size = UDim2.new(0, 200, 0, 30)
Label.Position = UDim2.new(0, 0, 0, 210)
Label.BackgroundColor3 = Color3.fromRGB(120, 0, 0)
Label.TextColor3 = Color3.fromRGB(255, 255, 255)
Label.Font = Enum.Font.SourceSansBold
Label.TextSize = 22
